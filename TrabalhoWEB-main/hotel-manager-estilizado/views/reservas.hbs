<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  {{#if reservas.length}}
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Quarto</th>
        <th>Dias</th>
        <th>Tipo</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each reservas}}
      <tr>
        <td>{{this.nome}}</td>
        <td>{{this.quarto}}</td>
        <td>{{this.dias}}</td>
        <td>{{this.tipo}}</td>
        <td>
          <a href="/reservas/editar/{{this.id}}"><button type="button">Editar</button></a>
          <form action="/reservas/excluir/{{this.id}}" method="POST" style="display:inline;">
            <button type="submit">Excluir</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>Nenhuma reserva cadastrada.</p>
{{/if}}

</body>
</html>